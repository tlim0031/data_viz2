{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 600,
  "projection": {"type": "mercator"},
  "data": {
    "url": "https://raw.githubusercontent.com/tlim0031/data_viz2/refs/heads/main/js/ne_10m.topojson",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tlim0031/data_viz2/refs/heads/main/js/malaysia_map.json",
        "format": {"type": "topojson", "feature": "ne_50m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "#76c6ff", "stroke": "lightblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tlim0031/data_viz2/refs/heads/main/js/malaysia_map.json",
        "format": {"type": "topojson", "feature": "ne_50m_graticules_5"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "#e9e9e9"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tlim0031/data_viz2/refs/heads/main/js/malaysia_map.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
      },
      "transform": [
        {"calculate": "'Data is not available for ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "#e7e7e7", "stroke": "gray", "strokeWidth": 1},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/tlim0031/data_viz2/refs/heads/main/data/aggregated_arrivals_population.csv"
            },
            "key": "state",
            "fields": ["year", "total_arrivals", "total_population"]
          }
        },
        {
          "calculate": "(datum.total_arrivals / datum.total_population * 1000)",
          "as": "arrivals_per_population"
        },
        { "filter": "datum.year == 2023" }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "arrivals_per_population",
          "type": "quantitative",
          "title": "Total International Arrivals per Population",
          "scale": {
            "type": "threshold",
            "domain": [500, 1000, 2000, 6000, 8000],
            "rangeMin": 0,
            "rangeMax": 15000,
            "range": ["#bfd3e6","#9ebcda", "#8c96c6", "#8c6bb1","#6a51a3", "#4a1486"]
          },
          "legend": {
            "title": "Arrivals per state population"
          }
        },
        "tooltip": [
          {"field": "year", "type": "nominal", "title": "Year"},
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "total_arrivals", "type": "quantitative",
            "title": "Total International Tourist Arrivals", "format": ",.0f"},
          {"field": "total_population", "type": "quantitative",
            "title": "State Population", "format": ",.0f"},
          {"field": "arrivals_per_population", "type": "quantitative",
            "title": "Total International Arrivals per state population", "format": ",.2f"}
        ]
      }
    },
    {
      "mark": {
        "type": "text", "align": "center", "baseline": "middle", 
        "dx": -140, "dy": 150, "fontSize": 18, 
        "fontStyle": "sans-serif", "color": "#4d4a60"
      },
      "encoding": {
        "text": {
          "value": ["Johor has the highest international tourist", "arrivals per population, followed by Selangor",
           "and Sarawak. Pahang has the least", "international tourist arrivals"] 
        }
      }
    }
  ]
}
