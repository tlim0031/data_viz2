{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 500,
  "projection": {"type": "mercator"},
  "data": {
    "url": "https://raw.githubusercontent.com/tlim0031/data_viz2/refs/heads/main/js/ne_10m.topojson",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tlim0031/data_viz2/refs/heads/main/js/malaysia_map.json",
        "format": {"type": "topojson", "feature": "ne_50m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "#479bd7", "stroke": "lightblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tlim0031/data_viz2/refs/heads/main/js/malaysia_map.json",
        "format": {"type": "topojson", "feature": "ne_50m_graticules_5"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "#e9e9e9"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tlim0031/data_viz2/refs/heads/main/js/malaysia_map.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
      },
      "transform": [
        {"calculate": "'Data is not available for ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "#e7e7e7", "stroke": "gray", "strokeWidth": 1},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "./data/aggregated_arrivals_population.csv"
            },
            "key": "state",
            "fields": ["year", "total_arrivals", "total_population"]
          }
        },
        {
          "calculate": "(datum.total_arrivals / datum.total_population * 1000)",
          "as": "arrivals_per_population"
        },
        { 
          "filter": "datum.year == 2023"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "arrivals_per_population",
          "type": "quantitative",
          "title": "Total International per Population",
          "scale": {
            "type": "threshold",
            "domain": [500, 1000, 2000, 6000, 8000],
            "range": ["#fdd0a2", "#fdae6b", "#fd8d3c", "#e6550d", "#a63603"]
          }
        },
        "tooltip": [
          {"field": "year", "type": "nominal", "title": "Year"},
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "total_arrivals", "type": "quantitative", "title": "Total Arrivals"},
          {"field": "total_population", "type": "quantitative", "title": "Total Population"},
          {"field": "arrivals_per_population", "type": "quantitative", "title": "Immigrants per Population (%)"}
        ]
      }
    }
    
  ]
}
